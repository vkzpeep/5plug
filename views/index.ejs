<!DOCTYPE html>
<html class="dark">
   <head>
      <title>☆☆☆☆☆</title>
      <link rel="shortcut icon" type="image/png" href="https://cdn.discordapp.com/emojis/1065644181080514560.webp">
      <meta property="og:title" content="☆☆☆☆☆"/>
      <meta property="og:image" content="https://cdn.discordapp.com/emojis/1065644181080514560.webp">
      <meta name="theme-color" content="#000001">
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="../cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
      <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900'>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
      <link rel="stylesheet" href="css/style.css">
      <script src="https://cdn.jsdelivr.net/npm/@widgetbot/crate@3" async defer>
         const crate = new Crate({
            css: '.button {display: none}; .close {padding: 20px}',
         });
         crate.notify({
            content: "Clique na foto de cada membro para ver seu link.",
            timeout: 5000,
            avatar: "https://cdn.discordapp.com/emojis/1065644181080514560.webp",
         })
      </script>
   </head>
   <body style="background-color: #000">
      <div class="animação" id="animate">
         <script src="js/particles.js"></script>
         <div class="grade" data-column="1">

            <% for (let info of presence) { %>
               <% const id = info.id; %>
               <% const status = info.status ?? '80848E'; %>
               <% const userInfo = await getUserInfo(id) ?? {}; %>
               <% const database = await getDatabaseInfo(id) ?? {}; %>
    
               <% const emoji = database.emoji; %>
               <% const link = database.link; %>
            <div class="membros">
               <div class="container">
                  <div class="center-align">
                     <a href="/<%= link %>">
                        <img  style="border-color: #<%= status%>;" src="https://cdn.discordapp.com/avatars/<%= userInfo.id %>/<%= userInfo.avatar %>.webp?size=2048" class="avatar">
                     </a>
                  </div>
                  </div>
                  <div style="color:rgb(255, 255, 255);position:center;display:flex;align-items:center;justify-content: center;font-size: 19px;margin-top: 10px;">
                     <p><%= userInfo.global_name %></p>
                  </div>
                  <div style="color:gray;position:center;display:flex;align-items:center;justify-content: center;font-size: 19px;margin-top: -20px;">
                     <p><%= userInfo.username %></p>
                  </div>
                  <% if (database.emoji) { %>
                  <div style="position:center;display:flex;align-items:center;justify-content: center;margin-top: -8px;">
                     <img style="margin-left: 3px;" src="https://cdn.discordapp.com/emojis/<%= emoji %>.webp" width="16" height="16">
                  </div>
                  <% } %>
               </div>
            <% } %>
         </div>
      </div>
   </body>
</html>